import { Router } from 'express';
import User from './user.controller';

export default function routes(
  route: Router,
  baseUrl: string,
  middleware?: any,
): void {
  route.post(`${baseUrl}/store`, User.store);
  route.get(`${baseUrl}/index/:id`, User.index);
  route.get(`${baseUrl}/show`, User.show);
  route.delete(`${baseUrl}/delete/:id`, User.delete);
  route.put(`${baseUrl}/update/:id`, User.update);
}
