import '#config/env/env-loader.js'
import express from 'express'
import cors from 'cors'
import swaggerUi from "swagger-ui-express";
import swaggerFile from "./swagger.json";

import YouchLogs from '#config/debug/youch-config.js'

import mongooseDB from '#config/db-mongo/mongo-connect.js'

import routes from '#controllers/routes-api.js'
class ApiConfig {
  constructor() {
    this.server = express()

    this.middlewares()
    this.routes()

    //! db-start
    mongooseDB.start()
    //! db-end
  }

  middlewares() {
    this.server.use(cors())
    this.server.use(YouchLogs)
    this.server.use(express.json())
    this.server.use("/api-docs", swaggerUi.serve, swaggerUi.setup(swaggerFile));}

  routes() {
    this.server.use(routes)
  }
}

export default new ApiConfig().server
